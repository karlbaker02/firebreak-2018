<h1 class="heading-large">Create your own temporary register</h1>

<h2>Create a custom field</h2>

<%= form_for(@custom_field, url: '/temporary_register/save_custom_field') do |form| %>
    <div class="form-group">
      <label class="form-label" for="name">Field Name</label>
      <%= form.text_field(:field, { class: 'form-control' }) %>
    </div>

    <div class="form-group">
      <label class="form-label" for="description">Field Description</label>
      <%= form.text_field(:text, { class: 'form-control' }) %>
    </div>

    <div class="form-group">
      <label class="form-label" for="datatype">Data Type</label>
      <%= form.select(:datatype, options_for_select(@datatypes.map{|datatype| [datatype['datatype'], datatype['datatype']]}), {}, class: 'form-control' ) %>
    </div>

    <div class="form-group">
      <%= form.submit("Save and add to register", { class: "button" }) %>
    </div>

<% end %>
